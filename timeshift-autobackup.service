[Unit]
Description=Timeshift Auto Backup at Boot (once per day)
After=multi-user.target network.target
ConditionPathExists=/usr/local/bin/timeshift-daily-if-needed.sh

[Service]
Type=oneshot
ExecStart=/usr/local/bin/timeshift-daily-if-needed.sh
Nice=19
IOSchedulingClass=best-effort
IOSchedulingPriority=7

[Install]
WantedBy=default.target